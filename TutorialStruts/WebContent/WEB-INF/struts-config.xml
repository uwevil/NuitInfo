<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="AddContactValidationForm" type="miage.actionform.AddContactValidationForm"/>
	
		<form-bean name="EditContactForm" 
					type="miage.actionform.EditContactForm"/>
					
	</form-beans>

	<action-mappings>
		<action path="/ContactCreation" forward="/pages/contactCreation.jsp" />
		
		
		<action path="/AddContact" 
					type="miage.servletaction.AddContactAction"
					name="AddContactValidationForm" scope="request"
					input="/pages/contactCreation.jsp" validate="false">
					
				<forward name="success" path="/pages/success.jsp"/>
				<forward name="error" path="/pages/error.jsp"/>
				
		</action>
		
		<action path="/EditContact" 
				type="miage.servletaction.EditContact"
				name="EditContactForm" scope="request" 
				input="/pages/user.jsp">
		    <forward name="success" path="/pages/success.jsp"/>
			<forward name="error"   path="/pages/error.jsp" />
			</action>
	</action-mappings>
	
	<!-- ========== message file =========================== -->
	<message-resources parameter="Resources" />


</struts-config>
